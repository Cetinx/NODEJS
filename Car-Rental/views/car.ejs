                         <div class="d-flex mb-3">
                           
                           <p class="price ml-auto"><%= cars[index].buy  %> <span>/day</span></p>
                         </div>
                         <a href="/car/<%=cars[index].slug %> " class="btn btn-secondary py-2 ml-1 w-100">Details</a></p>
                       </div>
                     </div>
                  </div>
 
                   <% } %> 
                  </div>
                 </div>

